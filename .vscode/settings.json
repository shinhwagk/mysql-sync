{
  "editor.formatOnSave": true,
  "editor.insertSpaces": true,
  "editor.wordWrap": "on",
  "python.defaultInterpreterPath": "/usr/bin/python3.12",
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.codeActionsOnSave": {
      "source.organizeImports": "always"
    },
  },
  "search.exclude": {
    "vendor": true
  }
}